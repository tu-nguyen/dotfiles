#

if [ -f "$DOTFILE_DIR/setups/setup.sh" ]; then
    . "$DOTFILE_DIR/setups/setup.sh"
fi

r() {
  if [[ "$(pwd)" == *"/dotfiles" ]]; then
    IS_PROJECT_ROOT=true
    DOTFILE_DIR=$(pwd)
  else
    IS_PROJECT_ROOT=false
  fi

  t "Resetting settings.."
  if [ "$IS_PROJECT_ROOT" = false ]; then
    if [[ -n "$DOTFILE_DIR" ]]; then
      pushd $DOTFILE_DIR > /dev/null
    else
      t ERROR "You are not in the root of the dotfile project! Exiting.."
      return
    fi
  fi

  source .bashrc

  t "Setup starting.."
  pre_setup

  git pull

  t "Resetting settings.."
  reset_bashrc
  reset_vimrc
  reset_git_config
  reset_vscode_config
  reset_wsl_config
 
  if [ "$IS_PROJECT_ROOT" = false ]; then
    popd > /dev/null
  fi
  t SUCCESS "You are all set!"
}