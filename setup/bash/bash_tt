}

function dktt() {
  printf "${HDR_F}docker cheatsheet${NC}\n"
  printf "%s\n" "$br"
  printf "${SUB_F}docker${NC}                 → ${KEY_F}dk${NC} (docker)\n"
  printf "                       → ${KEY_F}dkps${NC} (list running containers)\n"
  printf "                       → ${KEY_F}dkc${NC} (list all docker containers)\n"
  printf "                       → ${KEY_F}dki${NC} (list docker images)\n"
  printf "                       → ${KEY_F}dkdf${NC} (run docker system df)\n"
  printf "                       → ${KEY_F}dkl${NC} (run docker logs <requires at least 1 argument CONTAINER>)\n"
  printf "                       → ${KEY_F}dklf${NC} (docker logs -f <requires at least 1 argument CONTAINER>)\n"
  printf "                       → ${KEY_F}dks${NC} (docker service <require COMMAND ie create, inspect, logs etc>)\n"
  printf "                       → ${KEY_F}dkrm${NC} (docker rm <requires at least 1 argument CONTAINER>)\n"
  printf "%s\n" "$br"
  printf "${SUB_F}docker functions${NC}      \n"
