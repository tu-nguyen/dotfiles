#!/bin/bash

br="${HDR_F}---------------------------------------------------------------------${NC}"

# Generalized function printer
function print_tt() {
  local file="$1"
  if [[ ! -f "$file" ]]; then
    echo "File not found: $file"
    return 1
  fi

  awk -v h="$H" -v nc="$NC" '
  BEGIN { comment="" }
  /^#/ { comment = $0; next }
  /^[a-zA-Z_][a-zA-Z0-9_]* *\(\) *\{/ {
      gsub(/^# *|^## */, "", comment)
      sub(/ *\(\) *\{/, "", $0)
      printf "  %s%-20s%s → %s\n", h, $0, nc, comment
      comment=""
  }' "$file"
}

function tt() {
  if [ -z "$DOTFILES_CONFIG_DIR" ]; then
    DOTFILES_CONFIG_DIR="$HOME/.config/dotfiles"
    printf "${WARN}[WARNING]${NC} DOTFILES_CONFIG_DIR is not set, defaulting to $DOTFILES_CONFIG_DIR"
  fi

  printf "${HDR_F}tt cheatsheet${NC}\n"
  printf "%s\n" "$br"
  # TODO: add chmod aliases
  printf "${SUB_F}primary functions${NC}      → ${KEY_F}ttt${NC} (show all tt)            → ${KEY_F}j${NC} (jobs -l)\n"
  printf "                       → ${KEY_F}cls${NC} (clear and ls)           → ${KEY_F}df${NC} (df -H)\n"
  printf "                       → ${KEY_F}mkcd${NC} (mkdir then cd)         → ${KEY_F}du${NC} (du -ch)\n"
  printf "                       → ${KEY_F}h${NC} (history)                  → ${KEY_F}dmesg10${NC} (10 recent logs)\n"
  printf "                       → ${KEY_F}x${NC} (exit)                     → ${KEY_F}top${NC} (htop)\n"
  printf "                       → ${KEY_F}v${NC} (vim)                      → ${KEY_F}top10${NC} (top 10 ps)\n"
  # ls
  printf "%s\n" "$br"
  printf "${SUB_F}ls & cd${NC}                → ${KEY_F}ll${NC} (ls -alh)                 → ${KEY_F}~${NC} (cd ~)\n"
  printf "                       → ${KEY_F}la${NC} (ls -A)                   → ${KEY_F}..${NC} (cd ..)\n"
  printf "                       → ${KEY_F}lsd${NC} (ls -a1F | grep /$)      → ${KEY_F}...${NC} (cd ../..)\n"
  printf "                       → ${KEY_F}lt${NC} (la -lt)                  → ${KEY_F}....${NC} (cd ../../..)\n"
  printf "                       → ${KEY_F}la${NC} (ls -A)                   → ${KEY_F}.4${NC} (../../../../)\n"
  # cd
  printf "%s\n" "$br"
  printf "${SUB_F}utils${NC}                  → ${KEY_F}myip${NC} (get ip)                → ${KEY_F}now${NC}/${KEY_F}nowtime${NC} (time)\n"
  printf "                       → ${KEY_F}ping${NC} (ping -c 5)             → ${KEY_F}nowdate${NC} (date)\n"
  printf "                       → ${KEY_F}p4${NC} (ping 4.2.2.2 -c 4)       → ${KEY_F}ipt${NC} (sudo /sbin/iptables)\n"
  printf "                       → ${KEY_F}ports${NC} (netstat -tulanp)      → ${KEY_F}diskspace${NC} (du)\n"
  printf "                       → ${KEY_F}folder${NC} ()                    → ${KEY_F}path${NC} ()→\n"
  # other
  printf "%s\n" "$br"
  printf "${SUB_F}other functions${NC}      \n"
  print_tt "$DOTFILES_CONFIG_DIR/.bash_functions"
  # other other
  printf "%s\n" "$br"
  printf "${SUB_F}other tt${NC}      \n"
  printf "  ${KEY_F}btt${NC}                  → to view bash cheatsheet\n"
  printf "  ${KEY_F}djtt${NC}                 → to view django cheatsheet\n"
  printf "  ${KEY_F}gtt${NC}                  → to view git aliases\n"
  printf "  ${KEY_F}makett${NC}               → to view makefile cheatsheet\n"
  printf "  ${KEY_F}pytt${NC}                 → to view python cheatsheet\n"
  printf "  ${KEY_F}dctt${NC}                 → to view docker-compose cheatsheet\n"
  printf "  ${KEY_F}dktt${NC}                 → to view docker stuff\n"
  printf "  ${KEY_F}vtt${NC}                  → to view vim cheatsheet\n"

  if [[ ! -f "$DOTFILES_CONFIG_DIR/.bash_personal" ]]; then
    printf "  ${KEY_F}ptt${NC}                  → .bash_personal ${RED}does not exist${NC} inside $DOTFILES_CONFIG_DIR\n"
  else
    printf "  ${KEY_F}ptt${NC}                  → to view personal stuff\n"
  fi

  if [[ ! -f "$DOTFILES_CONFIG_DIR/.bash_twork" ]]; then
    printf "  ${KEY_F}tworktt${NC}              → .bash_twork ${RED}does not exist${NC} inside $DOTFILES_CONFIG_DIR\n"
    printf "                             run ${KEY_F}set-tworktt${NC} to copy .bash_twork template\n"
  else
    printf "  ${KEY_F}tworktt${NC}              → to view twork stuff\n"
  fi

  printf "%s\n" "$br"
  printf "${SUB_F}reminder${NC}      \n"
  printf "  ${KEY_F}cd-dotfiles${NC}          → to acd to original dotfiles dir\n"
}

function btt() {
  printf "${HDR_F}bash cheatsheet${NC}\n"
  printf "%s\n" "$br"
  printf "${SUB_F}navigation:${NC}\n"
  printf "  ${KEY_F}cd${NC} ${DIM_F}dir${NC}               → Change directory\n"
  printf "  ${KEY_F}cd -${NC}                 → Previous directory\n"
  printf "  ${KEY_F}pwd${NC}                  → Print working directory\n"
  printf "  ${KEY_F}ls -al${NC}               → List files\n"
  printf "%s\n" "$br"
  printf "${SUB_F}file ops:${NC}\n"
  printf "  ${KEY_F}cp${NC} ${DIM_F}src dst${NC}           → Copy file\n"
  printf "  ${KEY_F}mv${NC} ${DIM_F}src dst${NC}           → Move/rename file\n"
  printf "  ${KEY_F}rm${NC} ${DIM_F}file${NC}              → Remove file\n"
