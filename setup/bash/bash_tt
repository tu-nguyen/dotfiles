  printf "  ${DIM_F}0/$ ${NC}                 → Start/End of line\n"
  printf "  ${DIM_F}gg/G${NC}                 → Top/Bottom of file\n"
  printf "%s\n" "$br"
  printf "${SUB_F}editing:${NC}\n"
  printf "  ${DIM_F}x${NC}                    → Delete char\n"
