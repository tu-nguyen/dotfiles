function gtt() {
  printf "${HDR_F}git cheatsheet${NC}\n"
  printf "%s\n" "$br"
  printf "${SUB_F}git${NC}                    → ${KEY_F}ga${NC} (add)                     → ${KEY_F}gb${NC} (branch)\n"
  printf "                       → ${KEY_F}gs${NC} (status)                  → ${KEY_F}gbr${NC} (fance branch)\n"
  printf "                       → ${KEY_F}gc${NC} (cam)                     → ${KEY_F}gbd${NC} (delete branch)\n"
  printf "                       → ${KEY_F}cl${NC} (log)                     → ${KEY_F}gcl${NC} (cl show last commit)\n"
  printf "                       → ${KEY_F}crr${NC} (hard reset)             → ${KEY_F}gll${NC} (bigger log)\n"
  printf "                       → ${KEY_F}gf${NC} (git fetch)               → ${KEY_F}gfetch${NC} (also git fetch)\n"
  printf "${SUB_F}git alt${NC}                → ${NC}s${NC} (status -s)                → ${KEY_F}b${NC} (fancy branch)\n"
  printf "                       → ${KEY_F}st${NC} (status)                  → ${KEY_F}br${NC} (branch)\n"
  printf "                       → ${KEY_F}co${NC} (checkout)                → ${KEY_F}a${NC} (add)\n"
  printf "                       → ${KEY_F}cob${NC} (checkout -b)            → ${KEY_F}ap${NC} (add -p)\ \n"
  printf "                       → ${KEY_F}coB${NC} (checkout -B)            → ${KEY_F}l${NC} (diff)\n"
  printf "                       → ${KEY_F}c${NC} (commit)                   → ${NC}d${NC} (diff)\n"
  printf "                       → ${KEY_F}ca${NC} (commit -a)               → ${NC}ds${NC} (diff --stat)\n"
  printf "                       → ${KEY_F}cm${NC} (commit -m)               → ${NC}dc${NC} (diff --cached)\n"
  printf "                       → ${KEY_F}cam${NC} (commit -a -m)           \n"
  printf "                       → ${KEY_F}m${NC} (commit -m)                → ${KEY_F}la${NC} (to ALL git config)\n"
  printf "%s\n" "$br"
  printf "${SUB_F}git functions${NC}      \n"
  printf "  ${KEY_F}gpull${NC}                → Git pull with rebase and autostash\n"
  printf "  ${KEY_F}gpush${NC}                → Git push with set-upstream\n"
  printf "  ${KEY_F}gco${NC}                  → Switch to a specified Git branch with confirmation\n"
  printf "  ${KEY_F}gcob${NC}                 → Same as above but with fallback to create a branch\n"
  printf "  ${KEY_F}greset${NC}               → Hard reset on current branch\n"
  printf "  ${KEY_F}gclean${NC}               → Hard reset and removes untracked files\n"
  printf "  ${KEY_F}gclone${NC}               → Clone a repo\n"
  printf "  ${KEY_F}grn${NC}                  → Rename git branch\n"
  printf "%s\n" "$br"

  printf "${SUB_F}ghcli run${NC}\n"
  printf "  ${KEY_F}gh run list${NC}          → List runners (all details)\n"
  printf "  ${KEY_F}gh run cancel${NC} ${DIM_F}id${NC}     → Cancel a workflow run\n"
  printf "  ${KEY_F}gh run list --json databaseId -q '.[].databaseId' | xargs -d '\\\\n' -n1 gh run cancel${NC}\n"
  printf "                       → Cancels all runners\n"
  printf "  ${KEY_F}gh run delete${NC} ${DIM_F}id${NC}     → Delete a workflow run\n"
  printf "  ${KEY_F}gh run rerun${NC} ${DIM_F}id${NC}      → Rerun a workflow run\n"
  printf "  ${KEY_F}gh run view${NC} ${DIM_F}id${NC}       → View a workflow run\n"
  printf "  ${KEY_F}gh run watch${NC} ${DIM_F}id${NC}      → Watch a workflow run until it completes\n"
  printf "%s\n" "$br"
  printf "${SUB_F}todo:${NC}\n"
  printf "  ${KEY_F}todo${NC}                 → todo\n"
  printf "  ${KEY_F}todo${NC}                 → todo\n"
  printf "  ${KEY_F}todo${NC}                 → todo\n"
  printf "%s\n" "$br"
  printf "${SUB_F}todo:${NC}\n"
  printf "  ${KEY_F}todo${NC}                 → todo\n"
  printf "  ${KEY_F}todo${NC}                 → todo\n"
  printf "  ${KEY_F}todo${NC}                 → todo\n"
  printf "  ${KEY_F}todo${NC}                 → todo\n"
  printf "%s\n" "$br"
  printf "${SUB_F}todo:${NC}\n"
  printf "  ${KEY_F}todo${NC}                 → todo\n"
  printf "  ${KEY_F}todo${NC}                 → todo\n"
  printf "  ${KEY_F}todo${NC}                 → todo\n"
  printf "%s\n" "$br"
}


function makett() {
  printf "${HDR_F}makefile cheatsheet${NC}\n"
  printf "%s\n" "$br"
  printf "${SUB_F}common targets:${NC}\n"
  printf "  ${KEY_F}make${NC}                → Run default target\n"
  printf "  ${KEY_F}make${NC} ${DIM_F}target${NC}     → Run specific target\n"
  printf "%s\n" "$br"
  printf "${SUB_F}variables:${NC}\n"
  printf "  ${DIM_F}VAR${NC} ${KEY_F}=${NC} ${DIM_F}value${NC}         → Set variable\n"
  printf "  ${DIM_F}\$(VAR)${NC}              → Use variable\n"
  printf "%s\n" "$br"
  printf "${SUB_F}phony targets:${NC}\n"
  printf "  ${DIM_F}.PHONY: clean${NC}       → Declare phony target\n"
  printf "%s\n" "$br"
  printf "${SUB_F}examples:${NC}\n"
  printf "  ${DIM_F}.PHONY: clean\n"
  printf "  clean:\n"
  printf "    rm -rf *.pyc __pycache__/${NC}\n"
  printf "%s\n" "$br"
}

function pytt() {
  printf "${HDR_F}python cheatsheet${NC}\n"
  printf "%s\n" "$br"
  printf "${SUB_F}run & env:${NC}\n"
  printf "  ${KEY_F}python${NC} ${DIM_F}file.py${NC}            → Run script\n"
  printf "  ${KEY_F}python -m venv${NC} ${DIM_F}venv${NC}       → Create virtualenv\n"
  printf "  ${KEY_F}source venv/bin/activate${NC}  → Activate venv\n"
  printf "  ${KEY_F}pip install${NC} ${DIM_F}package${NC}       → Install package\n"
  printf "  ${KEY_F}pip freeze >${NC} ${DIM_F}req.txt${NC}      → Export requirements\n"
  printf "  ${KEY_F}pip install -r${NC} ${DIM_F}req.txt${NC}    → Install from requirements\n"
  printf "%s\n" "$br"
  printf "${SUB_F}common commands:${NC}\n"
  printf "  ${KEY_F}python -m http.server${NC}     → Simple HTTP server\n"
  printf "  ${KEY_F}python -i${NC} ${DIM_F}file.py${NC}         → Run and enter REPL\n"
  printf "  ${KEY_F}python -c${NC} ${DIM_F}'code'${NC}          → Run one-liner\n"
  printf "%s\n" "$br"
  printf "${SUB_F}testing:${NC}\n"
  printf "  ${KEY_F}pytest${NC}                    → Run tests\n"
  printf "  ${KEY_F}pytest -k${NC} ${DIM_F}test_func${NC}       → Run specific test\n"
  printf "  ${KEY_F}coverage run -m pytest${NC}    → Run tests with coverage\n"
  printf "  ${KEY_F}coverage report${NC}           → Show coverage\n"
  printf "%s\n" "$br"
  printf "${SUB_F}formatting & lint:${NC}\n"
  printf "  ${KEY_F}black .${NC}                   → Format code\n"
  printf "  ${KEY_F}isort .${NC}                   → Sort imports\n"
  printf "  ${KEY_F}flake8 .${NC}                  → Lint code\n"
  printf "%s\n" "$br"
}

