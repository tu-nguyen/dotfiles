function gtt() {
    printf "${HDR_F}git cheatsheet${NC}\n"
    printf "%s\n" "$br"
    printf "${SUB_F}git:${NC}                   ${H2}→${NC} ${KEY_F}ga${NC} (add)                     ${H2}→${NC} ${KEY_F}gb${NC} (branch)\n"
    printf "                       ${H2}→${NC} ${KEY_F}gs${NC} (status)                  ${H2}→${NC} ${KEY_F}gbr${NC} (fance branch)\n"
    printf "                       ${H2}→${NC} ${KEY_F}gc${NC} (cam)                     ${H2}→${NC} ${KEY_F}gbd${NC} (delete branch)\n"
    printf "                       ${H2}→${NC} ${KEY_F}cl${NC} (log)                     ${H2}→${NC} ${KEY_F}gcl${NC} (cl show last commit)\n"
    printf "                       ${H2}→${NC} ${KEY_F}crr${NC} (hard reset)             ${H2}→${NC} ${KEY_F}gll${NC} (bigger log)\n"
    printf "                       ${H2}→${NC} ${KEY_F}gf${NC} (git fetch)               ${H2}→${NC} ${KEY_F}gfetch${NC} (also git fetch)\n"
    printf "${SUB_F}git alt:${NC}               ${H2}→${NC} ${KEY_F}s${NC} (status -s)                ${H2}→${NC} ${KEY_F}b${NC} (fancy branch)\n"
    printf "                       ${H2}→${NC} ${KEY_F}st${NC} (status)                  ${H2}→${NC} ${KEY_F}br${NC} (branch)\n"
    printf "                       ${H2}→${NC} ${KEY_F}co${NC} (checkout)                ${H2}→${NC} ${KEY_F}a${NC} (add)\n"
    printf "                       ${H2}→${NC} ${KEY_F}cob${NC} (checkout -b)            ${H2}→${NC} ${KEY_F}ap${NC} (add -p)\ \n"
    printf "                       ${H2}→${NC} ${KEY_F}coB${NC} (checkout -B)            ${H2}→${NC} ${KEY_F}l${NC} (diff)\n"
    printf "                       ${H2}→${NC} ${KEY_F}c${NC} (commit)                   ${H2}→${NC} ${KEY_F}d${NC} (diff)\n"
    printf "                       ${H2}→${NC} ${KEY_F}ca${NC} (commit -a)               ${H2}→${NC} ${KEY_F}ds${NC} (diff --stat)\n"
    printf "                       ${H2}→${NC} ${KEY_F}cm${NC} (commit -m)               ${H2}→${NC} ${KEY_F}dc${NC} (diff --cached)\n"
    printf "                       ${H2}→${NC} ${KEY_F}cam${NC} (commit -a -m)           \n"
    printf "                       ${H2}→${NC} ${KEY_F}m${NC} (commit -m)                ${H2}→${NC} ${KEY_F}la${NC} (to ALL git config)\n"
    printf "%s\n" "$br"
    printf "${SUB_F}git workflows${NC}\n"
    printf "  ${KEY_F}git revert${NC} ${DIM_F}commit${NC}                                   ${H2}→${NC} undo commit (creates new commit)\n"
    printf "  ${KEY_F}git reset --soft HEAD~1${NC}                             ${H2}→${NC} undo last commit (keep changes)\n"
    printf "  ${KEY_F}git reset --hard HEAD~1${NC}                             ${H2}→${NC} undo last commit (discard changes)\n"
    printf "  ${KEY_F}git rebase main${NC}                                     ${H2}→${NC} common rebase on feature\n"
    printf "  ${KEY_F}git push --force-with-lease origin${NC} ${DIM_F}some-feature-branch${NC}   ${H2}(after fixing conflicts from above)${NC}\n"
    printf "  ${KEY_F}git stash save -m "\"${NC}${DIM_F}message${NC}${KEY_F}\"${NC}"                         ${H2}→${NC} stash with name/message\n"
    printf "  ${KEY_F}agit stash apply stash@{${NC}${DIM_F}index${NC}${KEY_F}}                      ${H2}→${NC} apply stash\n"
    printf "%s\n" "$br"
    printf "${SUB_F}git functions:${NC}      \n"
    printf "  ${KEY_F}gpull${NC}                ${H2}→${NC} Git pull with rebase and autostash\n"
    printf "  ${KEY_F}gpush${NC}                ${H2}→${NC} Git push with set-upstream\n"
    printf "  ${KEY_F}gco${NC}                  ${H2}→${NC} Switch to a specified Git branch with confirmation\n"
    printf "  ${KEY_F}gcob${NC}                 ${H2}→${NC} Same as above but with fallback to create a branch\n"
    printf "  ${KEY_F}greset${NC}               ${H2}→${NC} Hard reset on current branch\n"
    printf "  ${KEY_F}gclean${NC}               ${H2}→${NC} Hard reset and removes untracked files\n"
    printf "  ${KEY_F}gclone${NC}               ${H2}→${NC} Clone a repo\n"
    printf "  ${KEY_F}grn${NC}                  ${H2}→${NC} Rename git branch\n"
    printf "%s\n" "$br"
    printf "${SUB_F}ghcli run:${NC}\n"
    printf "  ${KEY_F}gh run list${NC}          ${H2}→${NC} List runners (all details)\n"
    printf "  ${KEY_F}gh run cancel${NC} ${DIM_F}id${NC}     ${H2}→${NC} Cancel a workflow run\n"
    printf "  ${KEY_F}gh run list --json databaseId -q '.[].databaseId' | xargs -d '\\\\n' -n1 gh run cancel${NC}\n"
    printf "                       ${H2}→${NC} Cancels all runners\n"
    printf "  ${KEY_F}gh run delete${NC} ${DIM_F}id${NC}     ${H2}→${NC} Delete a workflow run\n"
    printf "  ${KEY_F}gh run rerun${NC} ${DIM_F}id${NC}      ${H2}→${NC} Rerun a workflow run\n"
    printf "  ${KEY_F}gh run view${NC} ${DIM_F}id${NC}       ${H2}→${NC} View a workflow run\n"
    printf "  ${KEY_F}gh run watch${NC} ${DIM_F}id${NC}      ${H2}→${NC} Watch a workflow run until it completes\n"
    # printf "%s\n" "$br"
    # printf "${SUB_F}todo:${NC}\n"
    # printf "  ${KEY_F}todo${NC}                 ${H2}→${NC} todo\n"
    # printf "  ${KEY_F}todo${NC}                 ${H2}→${NC} todo\n"
    # printf "  ${KEY_F}todo${NC}                 ${H2}→${NC} todo\n"
    # printf "  ${KEY_F}todo${NC}                 ${H2}→${NC} todo\n"
    # printf "%s\n" "$br"
    # printf "${SUB_F}todo:${NC}\n"
    # printf "  ${KEY_F}todo${NC}                 ${H2}→${NC} todo\n"
    # printf "  ${KEY_F}todo${NC}                 ${H2}→${NC} todo\n"
    # printf "  ${KEY_F}todo${NC}                 ${H2}→${NC} todo\n"
    printf "%s\n" "$br"
}

function gttt() {
    printf "${HDR_F}Git Aliases (Active)${NC}\n"
    printf "%s\n" "$br"
    alias | grep 'git' | sed "s/alias //g" | sed "s/='/\t${H2}→${NC} /g" | sed "s/'//g"
    printf "%s\n" "$br"
}


function makett() {
    printf "${HDR_F}makefile cheatsheet${NC}\n"
    printf "%s\n" "$br"
    printf "${SUB_F}common targets:${NC}\n"
    printf "  ${KEY_F}make${NC}                ${H2}→${NC} Run default target\n"
    printf "  ${KEY_F}make${NC} ${DIM_F}target${NC}         ${H2}→${NC} Run specific target\n"
    printf "%s\n" "$br"
    printf "${SUB_F}variables:${NC}\n"
    printf "  ${DIM_F}VAR${NC} ${KEY_F}=${NC} ${DIM_F}value${NC}         ${H2}→${NC} Set variable\n"
    printf "  ${DIM_F}\$(VAR)${NC}              ${H2}→${NC} Use variable\n"
    printf "%s\n" "$br"
    printf "${SUB_F}phony targets:${NC}\n"
    printf "  ${DIM_F}.PHONY: clean${NC}       ${H2}→${NC} Declare phony target\n"
    printf "%s\n" "$br"
    printf "${SUB_F}examples:${NC}\n"
    printf "  ${DIM_F}.PHONY: clean\n"
    printf "  clean:\n"
    printf "    rm -rf *.pyc __pycache__/${NC}\n"
    printf "%s\n" "$br"
}

function pytt() {
    printf "${HDR_F}python cheatsheet${NC}\n"
    printf "%s\n" "$br"
    printf "${SUB_F}run & env:${NC}\n"
    printf "  ${KEY_F}python${NC} ${DIM_F}file.py${NC}            ${H2}→${NC} Run script\n"
    printf "  ${KEY_F}python -m venv${NC} ${DIM_F}venv${NC}       ${H2}→${NC} Create virtualenv\n"
    printf "  ${KEY_F}source venv/bin/activate${NC}  ${H2}→${NC} Activate venv\n"
    printf "  ${KEY_F}pip install${NC} ${DIM_F}package${NC}       ${H2}→${NC} Install package\n"
    printf "  ${KEY_F}pip freeze >${NC} ${DIM_F}req.txt${NC}      ${H2}→${NC} Export requirements\n"
    printf "  ${KEY_F}pip install -r${NC} ${DIM_F}req.txt${NC}    ${H2}→${NC} Install from requirements\n"
    printf "%s\n" "$br"
    printf "${SUB_F}common commands:${NC}\n"
    printf "  ${KEY_F}python -m http.server${NC}     ${H2}→${NC} Simple HTTP server\n"
    printf "  ${KEY_F}python -i${NC} ${DIM_F}file.py${NC}         ${H2}→${NC} Run and enter REPL\n"
    printf "  ${KEY_F}python -c${NC} ${DIM_F}'code'${NC}          ${H2}→${NC} Run one-liner\n"
    printf "%s\n" "$br"
    printf "${SUB_F}testing:${NC}\n"
    printf "  ${KEY_F}pytest${NC}                    ${H2}→${NC} Run tests\n"
    printf "  ${KEY_F}pytest -k${NC} ${DIM_F}test_func${NC}       ${H2}→${NC} Run specific test\n"
    printf "  ${KEY_F}coverage run -m pytest${NC}    ${H2}→${NC} Run tests with coverage\n"
    printf "  ${KEY_F}coverage report${NC}           ${H2}→${NC} Show coverage\n"
    printf "%s\n" "$br"
    printf "${SUB_F}formatting & lint:${NC}\n"
    printf "  ${KEY_F}black .${NC}                   ${H2}→${NC} Format code\n"
    printf "  ${KEY_F}isort .${NC}                   ${H2}→${NC} Sort imports\n"
    printf "  ${KEY_F}flake8 .${NC}                  ${H2}→${NC} Lint code\n"
    printf "%s\n" "$br"
}

