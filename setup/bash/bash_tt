  printf "  ${KEY_F}find . -name${NC} ${DIM_F}'*.sh'${NC}  → Find files\n"
  printf "%s\n" "$br"
  printf "${SUB_F}process:${NC}\n"
  printf "  ${KEY_F}ps aux${NC}               → List processes (ps -a | grep firefox)\n"
  printf "  ${KEY_F}top${NC}                  → Interactive process viewer\n"
  printf "  ${KEY_F}kill${NC} ${DIM_F}PID${NC}             → Kill process\n"
  printf "%s\n" "$br"
  printf "${SUB_F}history & jobs:${NC}\n"
  printf "  ${KEY_F}history${NC}              → Show command history\n"
  printf "  ${KEY_F}!!${NC}                   → Repeat last command\n"
  printf "  ${KEY_F}!n${NC}                   → Repeat command n\n"
  printf "  ${KEY_F}jobs${NC}                 → List background jobs\n"
  printf "  ${KEY_F}fg/bg${NC}                → Foreground/background job\n"
  printf "%s\n" "$br"
  printf "${SUB_F}shortcuts:${NC}\n"
  printf "  ${KEY_F}Ctrl+a${NC}               → Start of line\n"
  printf "  ${KEY_F}Ctrl+e${NC}               → End of line\n"
  printf "  ${KEY_F}Ctrl+r${NC}               → Reverse search history\n"
  printf "  ${KEY_F}Ctrl+c${NC}               → Cancel command\n"
  printf "  ${KEY_F}Ctrl+d${NC}               → Logout/EOF\n"
  printf "%s\n" "$br"
  printf "${SUB_F}scripting:${NC}\n"
  printf "  ${KEY_F}echo${NC} ${DIM_F}\"text\"${NC}          → Print text\n"
  printf "  ${DIM_F}VAR${NC}${KEY_F}=${NC}${DIM_F}value${NC}            → Set variable\n"
  printf "  ${DIM_F}\$VAR${NC}                 → Use variable\n"
  printf "  ${KEY_F}for i in *; do ... done${NC}\n"
  printf "  ${KEY_F}if ...; then ...; fi${NC}\n"
  printf "  ${KEY_F}function fname() { ... }${NC}\n"
  printf "%s\n" "$br"
  printf "${SUB_F}other:${NC}\n"
  printf "  ${KEY_F}curl${NC}                 → Check connectivity (ping 8.8.8.8) Network troubleshooting 101\n"
  printf "  ${KEY_F}ping${NC}                 → Grab data(curl -O http://example.com/file.txt) Downloads without a browser\n"
  printf "%s\n" "$br"
}

