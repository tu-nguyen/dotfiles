#!/usr/bin/env bash
# ========================================== #
# CHEATSHEET & HELP SYSTEM
# ========================================== #

# Separators
br="${HDR_F}---------------------------------------------------------------------${NC}"

# Generalized function printer
function print_tt() {
    local file="$1"
    if [[ ! -f "$file" ]]; then
        echo "File not found: $file"
        return 1
    fi

    # Pass S, H, and NC into awk variables
    awk -v h="$H" -v s="$S" -v h2="$H2" -v nc="$NC" '
    BEGIN { comment="" }

    /^#/ { comment = $0; next }

    /^[a-zA-Z_][a-zA-Z0-9_]* *\(\) *\{/ {
        # Skip internal/hook functions
        if ($0 ~ /^((pre|post)_r) *\(\)/) {
            comment=""
            next
        }

        # Clean up the comment (remove # and leading spaces)
        gsub(/^# *|^## */, "", comment)

        # Extract function name
        match($0, /^[a-zA-Z_][a-zA-Z0-9_]*/)
        func_name = substr($0, RSTART, RLENGTH)

        # Print using the passed variables
        # %-20s ensures the function name column stays aligned
        printf "  %s%-20s%s %s→%s %s\n", h, func_name, nc, h2, nc, comment
        comment=""
    }' "$file"
}

function tt() {
    if [ -z "$DOTFILES_CONFIG_DIR" ]; then
        DOTFILES_CONFIG_DIR="$HOME/.config/dotfiles"
        printf "${WARN}[WARNING]${NC} DOTFILES_CONFIG_DIR is not set, defaulting to $DOTFILES_CONFIG_DIR"
    fi

    printf "${HDR_F}tt cheatsheet${NC}\n"
    printf "%s\n" "$br"
    # TODO: add chmod aliases
    printf "${SUB_F}primary functions${NC}      ${H2}→${NC} ${KEY_F}ttt${NC} (show all tt)            ${H2}→${NC} ${KEY_F}j${NC} (jobs -l)\n"
    printf "                       ${S}${H2}→${NC}${NC} ${KEY_F}cls${NC} (clear and ls)           ${H2}→${NC} ${KEY_F}df${NC} (df -H)\n"
    printf "                       ${H2}→${NC} ${KEY_F}mkcd${NC} (mkdir then cd)         ${H2}→${NC} ${KEY_F}du${NC} (du -ch)\n"
    printf "                       ${H2}→${NC} ${KEY_F}h${NC} (history)                  ${H2}→${NC} ${KEY_F}dmesg10${NC} (10 recent logs)\n"
    printf "                       ${H2}→${NC} ${KEY_F}x${NC} (exit)                     ${H2}→${NC} ${KEY_F}top${NC} (htop)\n"
    printf "                       ${H2}→${NC} ${KEY_F}v${NC} (vim)                      ${H2}→${NC} ${KEY_F}top10${NC} (top 10 ps)\n"
    # ls
    printf "%s\n" "$br"
    printf "${SUB_F}ls & cd${NC}                ${H2}→${NC} ${KEY_F}ll${NC} (ls -alh)                 ${H2}→${NC} ${KEY_F}~${NC} (cd ~)\n"
    printf "                       ${H2}→${NC} ${KEY_F}la${NC} (ls -A)                   ${H2}→${NC} ${KEY_F}..${NC} (cd ..)\n"
    printf "                       ${H2}→${NC} ${KEY_F}lsd${NC} (ls -a1F | grep /$)      ${H2}→${NC} ${KEY_F}...${NC} (cd ../..)\n"
    printf "                       ${H2}→${NC} ${KEY_F}lt${NC} (la -lt)                  ${H2}→${NC} ${KEY_F}....${NC} (cd ../../..)\n"
    printf "                       ${H2}→${NC} ${KEY_F}la${NC} (ls -A)                   ${H2}→${NC} ${KEY_F}.4${NC} (../../../../)\n"
    # cd
    printf "%s\n" "$br"
    printf "${SUB_F}utils${NC}                  ${H2}→${NC} ${KEY_F}myip${NC} (get ip)                ${H2}→${NC} ${KEY_F}now${NC}/${KEY_F}nowtime${NC} (time)\n"
    printf "                       ${H2}→${NC} ${KEY_F}ping${NC} (ping -c 5)             ${H2}→${NC} ${KEY_F}nowdate${NC} (date)\n"
    printf "                       ${H2}→${NC} ${KEY_F}p4${NC} (ping 4.2.2.2 -c 4)       ${H2}→${NC} ${KEY_F}ipt${NC} (sudo /sbin/iptables)\n"
    printf "                       ${H2}→${NC} ${KEY_F}ports${NC} (netstat -tulanp)      ${H2}→${NC} ${KEY_F}diskspace${NC} (du)\n"
    printf "                       ${H2}→${NC} ${KEY_F}folder${NC} (dir and sizes)       ${H2}→${NC} ${KEY_F}path${NC} (readible \$PATH)\n"
    printf "                       ${H2}→${NC} ${KEY_F}tree${NC} (blazeit)               ${H2}→${NC} ${KEY_F}treed${NC} (tree dir only)\n"
    # other
    printf "%s\n" "$br"
    printf "${SUB_F}other functions${NC}      \n"
    print_tt "$DOTFILES_CONFIG_DIR/.bash_functions"
    # other other
    printf "%s\n" "$br"
    printf "${SUB_F}other tt${NC}      \n"
    printf "  ${KEY_F}btt${NC}                  ${H2}→${NC} to view bash cheatsheet\n"
    printf "  ${KEY_F}djtt${NC}                 ${H2}→${NC} to view django cheatsheet\n"
    printf "  ${KEY_F}gtt${NC}                  ${H2}→${NC} to view git aliases\n"
    printf "  ${KEY_F}makett${NC}               ${H2}→${NC} to view makefile cheatsheet\n"
    printf "  ${KEY_F}pytt${NC}                 ${H2}→${NC} to view python cheatsheet\n"
    printf "  ${KEY_F}dctt${NC}                 ${H2}→${NC} to view docker-compose cheatsheet\n"
    printf "  ${KEY_F}dktt${NC}                 ${H2}→${NC} to view docker stuff\n"
    printf "  ${KEY_F}vtt${NC}                  ${H2}→${NC} to view vim cheatsheet\n"

    if [[ ! -f "$DOTFILES_CONFIG_DIR/.bash_personal" ]]; then
        printf "  ${KEY_F}ptt${NC}                  ${H2}→${NC} .bash_personal ${RED}does not exist${NC} inside $DOTFILES_CONFIG_DIR\n"
    else
        printf "  ${KEY_F}ptt${NC}                  ${H2}→${NC} to view personal stuff\n"
    fi

    if [[ ! -f "$DOTFILES_CONFIG_DIR/.bash_twork" ]]; then
        printf "  ${KEY_F}tworktt${NC}              ${H2}→${NC} .bash_twork ${RED}does not exist${NC} inside $DOTFILES_CONFIG_DIR\n"
        printf "                             run ${KEY_F}set-tworktt${NC} to copy .bash_twork template\n"
    else
        printf "  ${KEY_F}tworktt${NC}              ${H2}→${NC} to view twork stuff\n"
    fi

    printf "%s\n" "$br"
    printf "${SUB_F}reminder${NC}      \n"
    printf "  ${KEY_F}cd-dot${NC}               ${H2}→${NC} to acd to original dotfiles dir\n"
}

