function dktt() {
    printf "${HDR_F}docker cheatsheet${NC}\n"
    printf "%s\n" "$br"
    printf "${SUB_F}docker${NC}                 ${H2}→${NC} ${KEY_F}dk${NC} (docker)\n"
    printf "                       ${H2}→${NC} ${KEY_F}dkps${NC} (list running containers)\n"
    printf "                       ${H2}→${NC} ${KEY_F}dkc${NC} (list all docker containers)\n"
    printf "                       ${H2}→${NC} ${KEY_F}dki${NC} (list docker images)\n"
    printf "                       ${H2}→${NC} ${KEY_F}dkdf${NC} (run docker system df)\n"
    printf "                       ${H2}→${NC} ${KEY_F}dkl${NC} (run docker logs <requires at least 1 argument CONTAINER>)\n"
    printf "                       ${H2}→${NC} ${KEY_F}dklf${NC} (docker logs -f <requires at least 1 argument CONTAINER>)\n"
    printf "                       ${H2}→${NC} ${KEY_F}dks${NC} (docker service <require COMMAND ie create, inspect, logs etc>)\n"
    printf "                       ${H2}→${NC} ${KEY_F}dkrm${NC} (docker rm <requires at least 1 argument CONTAINER>)\n"
    printf "%s\n" "$br"
    printf "${SUB_F}docker functions${NC}      \n"
    print_tt "$DOTFILES_CONFIG_DIR/.bash_docker_functions"
    printf "%s\n" "$br"
}

function vtt() {
    printf "${HDR_F}vim cheatsheet${NC}\n"
    printf "%s\n" "$br"
    printf "${SUB_F}modes:${NC}\n"
    printf "  ${DIM_F}i${NC}                    ${H2}→${NC} Insert mode\n"
    printf "  ${DIM_F}Esc${NC}                  ${H2}→${NC} Normal mode\n"
    printf "  ${DIM_F}:${NC}                    ${H2}→${NC} Command mode\n"
    printf "%s\n" "$br"
    printf "${SUB_F}navigation:${NC}\n"
    printf "  ${DIM_F}h j k l${NC}              ${H2}→${NC} Left Down Up Right\n"
    printf "  ${DIM_F}w/b/e${NC}                ${H2}→${NC} Next/Prev/End of word\n"
    printf "  ${DIM_F}0/$ ${NC}                 ${H2}→${NC} Start/End of line\n"
    printf "  ${DIM_F}gg/G${NC}                 ${H2}→${NC} Top/Bottom of file\n"
    printf "%s\n" "$br"
    printf "${SUB_F}editing:${NC}\n"
    printf "  ${DIM_F}x${NC}                    ${H2}→${NC} Delete char\n"
    printf "  ${DIM_F}dd${NC}                   ${H2}→${NC} Delete line\n"
    printf "  ${DIM_F}yy${NC}                   ${H2}→${NC} Yank (copy) line\n"
    printf "  ${DIM_F}p${NC}                    ${H2}→${NC} Paste\n"
    printf "  ${DIM_F}u${NC}                    ${H2}→${NC} Undo\n"
    printf "  ${DIM_F}Ctrl+r${NC}               ${H2}→${NC} Redo\n"
    printf "  ${DIM_F}r${NC}${WHITE}char${NC}                ${H2}→${NC} Replace char\n"
    printf "%s\n" "$br"
    printf "${SUB_F}search:${NC}\n"
    printf "  ${DIM_F}/${NC}${WHITE}pattern${NC}             ${H2}→${NC} Search forward\n"
    printf "  ${DIM_F}?${NC}${WHITE}pattern${NC}             ${H2}→${NC} Search backward\n"
    printf "  ${DIM_F}n/N${NC}                  ${H2}→${NC} Next/Prev match\n"
    printf "%s\n" "$br"
    printf "${SUB_F}save & quit:${NC}\n"
    printf "  ${DIM_F}:${NC}${WHITE}w${NC}                   ${H2}→${NC} Save\n"
    printf "  ${DIM_F}:${NC}${WHITE}q${NC}                   ${H2}→${NC} Quit\n"
    printf "  ${DIM_F}:${NC}${WHITE}wq${NC}                  ${H2}→${NC} Save & Quit\n"
    printf "  ${DIM_F}:${NC}${WHITE}q!${NC}                  ${H2}→${NC} Quit without saving\n"
    printf "%s\n" "$br"
}

function ttt() {
    printf "${HDR_F}ttt: Command Reference${NC}\n"
    printf "%s\n" "$br"
    printf "  ${SUB_F}%-20s %-30s %s${NC}\n" "Command" "Description" "Usage Example"
    printf "%s\n" "$br"
    printf "  %-20s %-30s %s\n" "c" "Clear the terminal" "c"
    printf "  %-20s %-30s %s\n" "cls" "Clear and list files" "cls"
    printf "  %-20s %-30s %s\n" "clss" "Clear and lsa" "clss"
    printf "  %-20s %-30s %s\n" "h" "Show command history" "h"
    printf "  %-20s %-30s %s\n" "x" "Exit the shell" "x"
