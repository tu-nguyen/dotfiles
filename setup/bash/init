#!/usr/bin/env bash
# ===================================================================== #
# DOTFILES INITIALIZATION (.init)
# ===================================================================== #
# This file sets up the core environment variables and helper functions
# used by the rest of the shell configuration.

# --- Start Load Configuration ---
: "${DOTFILES_CONFIG_DIR:=$HOME/.config/dotfiles}"
: "${DOTFILES_CONFIG_FILE:=$DOTFILES_CONFIG_DIR/.dotfile_config}"

if [[ -f "$DOTFILES_CONFIG_FILE" ]]; then
    source "$DOTFILES_CONFIG_FILE"
else
    echo -e "\e[31m[ ERR  ]\e[0m Configuration file not found at $DOTFILES_CONFIG_FILE" >&2
    return 1 2>/dev/null || exit 1
fi
# --- End Load Configuration ---

if [[ -f "$DOTFILES_REPO_DIR/setup/bash/bash_t" ]]; then
    . "$DOTFILES_REPO_DIR/setup/bash/bash_t"
elif [[ -f "$DOTFILES_CONFIG_DIR/.bash_t" ]]; then
    . "$DOTFILES_CONFIG_DIR/.bash_t"
else
    echo "\e[31m[ WARN ]\e[0m Failed to load core shell bash_t"
fi

if [[ -f "$DOTFILES_REPO_DIR/setup/bash/bash_functions" ]]; then
    . "$DOTFILES_REPO_DIR/setup/bash/bash_functions"
elif [[ -f "$DOTFILES_CONFIG_DIR/.bash_functions" ]]; then
    . "$DOTFILES_CONFIG_DIR/.bash_functions"
else
    echo "\e[31m[ WARN ]\e[0m Failed to load core shell bash_functions"
fi

if [[ -f "$DOTFILES_REPO_DIR/setup/bash/bash_style" ]]; then
    . "$DOTFILES_REPO_DIR/setup/bash/bash_style"
elif [[ -f "$DOTFILES_CONFIG_DIR/.bash_style" ]]; then
    . "$DOTFILES_CONFIG_DIR/.bash_style"
else
    echo "\e[31m[ WARN ]\e[0m Failed to load shell colors/styles"
fi
